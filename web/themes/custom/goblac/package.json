{
  "name": "goblac",
  "private": true,
  "scripts": {
    "build": "npx tailwindcss build -i css/styles.css -o dist/css/styles.css",
    "watch": "npx tailwindcss -i css/styles.css -o dist/css/styles.css --watch",
    "livereload": "livereload --exclusions node_modules/ --exts 'css,js,twig,theme,apng,avif,gif,jpg,jpeg,jfif,pjpeg,pjp,png,svg,webp'"
  },
  "devDependencies": {
    "livereload": "^0.9.3",
    "tailwindcss": "^3.4.1"
  }
}
